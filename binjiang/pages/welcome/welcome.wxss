/* pages/welcome/welcome.wxss */
.bgimage{ width: 750rpx; height: 100%; position: absolute; z-index: -1;}
.weltitle{ color: #fff; font-size: 50rpx; font-weight: bold; letter-spacing: 2rpx; width: 100%; text-align: center; display: inline-block; margin-top: 70rpx; margin-bottom: 100rpx;}
.table{width: 90%; margin: 0 auto;border-left: 1px solid rgba(0, 0, 0,0.6);border-top: 1px solid rgba(0, 0, 0,0.7); font-size: 16px}
.tr {display: flex;justify-content: space-between; border-bottom: 1px solid rgba(0, 0, 0,0.6);}
.tr:nth-child(odd){background: rgba(0, 0, 0,0.2);}
.td {padding: 25rpx;border-right: 1px solid rgba(0, 0, 0,0.6);
text-align: center;width:100%; color: #fff;font-weight: bold;}
.th {font-weight: bold;background: rgba(0, 0, 0,0.2);padding: 25rpx;border-right: 1px solid rgba(0, 0, 0,0.6); color: #1995fd;
text-align: center;width:100%
}
.whated{ width: 150rpx;background: #156ec0; color: #fff; line-height: 80rpx;}
.tabview{ text-align: center; width: 100%; margin-top: 100rpx;}
.view-btn{ display: inline-block; margin: 0 20rpx; }
.href{ background: #156ec0; color: #fff}
.power{ width: 100%; display: inline-block; text-align: center; color: #fff; margin-top: 70rpx; font-size: 16px;}
.powertext{ display: inline-block;width: 70%; line-height: 60rpx; margin: 0 auto; background: rgba(0,0,0,0.35)}
.powertext view{ display: inline-block; vertical-align: top}
.echart{ text-align: center; }
.echartc{ width: 270rpx; height: 270rpx; border-radius: 50%; display: inline-block; margin: 30rpx ; vertical-align: top;}
.echartc text{ color: #fff; width: 100%; height: 80rpx; line-height: 80rpx; font-size: 42rpx; display: block; font-weight: bold }
.echartc .echartctext{ margin-top: 50rpx;}
.caolv{ background: linear-gradient(to bottom,rgba(146,227,112,0.8) 0%,rgba(84,220,26,1) 100%);}
.qinglv{ background:linear-gradient(to bottom,rgba(89,221,140,0.8) 0%,rgba(89,221,140,1) 100%);}
.orange{background: linear-gradient(to bottom,rgba(255,193,46,0.8) 0%,rgba(255,194,54,1) 100%)}
.danred{background: linear-gradient(to bottom,rgba(255,145,145,0.8) 0%,rgba(255,103,103,1) 100%);}